<form method="post" class="mt-5">

  <div class="form-group">
    <label for="inputTitle">Заголовок</label>
    <input 
    type="text"
    value="<%= book.title%>"
    name="title"
    class="form-control"
    id="inputTitle"
    >
  </div>
  <div class="form-group">
    <label for="inputDesk">Описание</label>
    <textarea 
      rows="3"
      name="desk"
      class="form-control"
      id="inputDesk"
    ><%= book.title%></textarea>
  </div>
  <div class="form-group text-right">
    <button type="submit" class="btn btn-primary">Сохранить</button>
  </div>
</form>